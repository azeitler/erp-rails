- content_for :form_block do
  %h2.mb-4.h3= t('.forgot_your_password')
  = form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f|
    = render "error_messages", resource: resource
    .form-group
      = f.label :email
      = f.email_field :email,  autocomplete: "email", placeholder: "you@example.com", class: "form-control"
    .form-group
      = f.submit t('.send_me_reset_password_instructions'), class: "btn btn-primary btn-expanded"
  = render "devise/shared/links"
= render "devise/shared/form_block"
