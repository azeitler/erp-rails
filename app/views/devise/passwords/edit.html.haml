- content_for :form_block do
  %h2.h3= t('.change_your_password')
  = form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f|
    = render "error_messages", resource: resource
    = f.hidden_field :reset_password_token
    .form-group
      = f.label :password, t('.new_password')
      = f.password_field :password, autofocus: true, autocomplete: "new-password", class: "form-control", placeholder: "password"
      - if @minimum_password_length
        %p.mt-3.text-sm.text-gray-600
          (#{@minimum_password_length} characters minimum)
    .form-group
      = f.label :password_confirmation, t('.confirm_new_password')
      = f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control", placeholder: "password"
    .form-group
      = f.submit t('.change_my_password'), class: "btn btn-primary"
  = render "devise/shared/links"
= render "devise/shared/form_block"
