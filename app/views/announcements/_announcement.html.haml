.p-4.lg:p-10{:id => "#{dom_id(announcement)}"}
  = link_to announcement_path(announcement), class: "text-gray-400 text-sm font-medium capitalize" do
    = local_relative_time announcement.published_at, 'weekday-or-date'
  %h2.font-semibold.text-gray-900.text-lg.mb-2.dark:text-gray-100= announcement.title
  = badge announcement.kind.humanize.titleize, class: "mb-2", color: announcement_color(announcement)
  .text-gray-700.text-sm.dark:text-gray-300
    = announcement.description
