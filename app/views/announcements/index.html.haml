.container.mx-auto.max-w-4xl
  %h1.h2.mt-6.text-center= t(".title")
  %p.mt-2.text-center.text-xl.text-gray-700{:class => "dark:text-gray-300/75"}= t(".description", name: Jumpstart.config.application_name)
  .mt-6.flex.flex-col.rounded-lg.divide-y.divide-gray-200.bg-white.border.border-gray-200.dark:bg-gray-900.dark:border-gray-700.dark:divide-gray-700
    = render @announcements
    - if @announcements.empty?
      .p-4.lg:p-10= t(".empty_placeholder")
  - if @pagy.pages > 1
    .text-center.mt-8
      != pagy_nav(@pagy)
