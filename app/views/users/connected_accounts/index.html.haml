.flex.flex-wrap.my-4.lg:px-4
  .w-full.p-4{:class => "lg:w-1/4"}
    = render partial: "account_navbar"
  .w-full.p-4{:class => "lg:w-3/4"}
    .lg:p-10.p-4.bg-white.rounded-lg.border.border-gray-300.dark:bg-gray-900.dark:border-gray-700
      %h2.mb-2= t(".title")
      %p= t(".description")
      .my-2.flex.flex-wrap.gap-x-4.gap-y-2
        - Devise.omniauth_configs.each do |provider, config|
          = button_to t("oauth.sign_in_with", provider: t("oauth.#{provider}")), omniauth_authorize_path(:user, provider), class: "btn btn-#{provider}", data: { turbo: false, disable_with: t(".redirecting") }
      .divide-y
        = render @connected_accounts
