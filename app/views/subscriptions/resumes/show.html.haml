.max-w-xl.mx-auto.mt-12.p-8.bg-white.rounded.shadow
  %h3= t ".title"
  .my-8
    = render partial: "subscriptions/summary", locals: { subscription: @subscription }
  .flex-1.mt-2.mb-4.text-gray-700
    .mt-4= t(".resume")
  .mt-8.flex.justify-between.items-center
    = link_to t(".back"), subscriptions_path, class: "btn btn-secondary"
    = button_to subscription_resume_path(@subscription), method: :patch, class: "btn btn-primary", form: { data: { turbo_confirm: t("are_you_sure") } } do
      = button_text t(".button"), disable_with: t(".processing")
